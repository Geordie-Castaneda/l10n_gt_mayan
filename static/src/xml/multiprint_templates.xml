<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="pos_restaurant.OrderChangeReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-title')]" position="after">
            <t t-if="changes.cashier_name">
                <div class="pos-receipt-cashier">
                    Empleado: <t t-esc="changes.cashier.name"/>
                </div>
            </t>
        </xpath>
    </t>

</templates>